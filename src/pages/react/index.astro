---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('react')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang='ko'>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {width: 860px;}
      .title {margin: 0 0.5rem 0 0;color: rgb(var(--black));}
      .date {color: rgb(var(--gray));display: inline-block;}
			ul li {align-items: center;flex-wrap: wrap}
			ul li:not(:first-child) {margin-top: .5rem}
			ul li a{line-height: 1.25}
			.list-item-link:hover .date{font-weight: normal}
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/react/${post.slug}/`} class="list-item-link">
									<span class='title'>{post.data.title}</span>
									<small class="date">(<FormattedDate date={post.data.pubDate} />)</small>
									<br />
									<small class="date">{post.data.description}</small>
                  {/*<img width={720} height={360} src={post.data.heroImage} alt=''/>*/}
                  {/** <div class='list-item-link'>
                    <div class='title'>{post.data.title}</div>
                  </div>*/}
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
